{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": [
    "./src/**/*",
    "babel.config.js",
    "jest.config.js",
    "jestSetup.ts",
    "eslintrc.js"
  ],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "outDir": "build",
    "lib": ["DOM", "ES2017", "WebWorker"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
    "strict": true
  }
}
